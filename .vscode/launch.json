{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Tests",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
        "args": [
          "-i",
          "-g",
          "'Post-Deploy'",
          "--spec=test/**/*.test.js"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "NODE_ENV": "test"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Index Tests",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
        "args": [
          "test/index.test.js"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "NODE_ENV": "test"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Development Server",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/test/dev/server.mjs",
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }